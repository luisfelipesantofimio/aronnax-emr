---
import InstructionsGrid from "./InstructionsGrid.astro";

interface Props {
  title: string;
  body: string;
  locale: string;
}

const {title, body, locale} = Astro.props;
---

<section>
  <h2>
    {title}
  </h2>

  <p>
    {body}
  </p>
  <InstructionsGrid locale={locale}>
  </InstructionsGrid>
</section>

<style>
section{
  display: flex;
  flex-direction: column;
  justify-content: center;
  justify-items: center;
  align-items: center;
  align-content: center;
  padding-right: 10rem;
}
p{
  width: 70%;
}

@media only screen and (max-width: 768px) {
  section{
    padding-right: 0rem;
    padding: 10px;
  }
}
</style>
