---
import Spacer from './Spacer.astro';

const year: number = new Date().getFullYear();

interface Props {
  local: string;
}

interface Names {
  with: string;
  using: string;
}

const es: Names = {
  with: "con",
  using: "usando",
}

const en: Names = {
  with: "with",
  using: "using",
}


const {local} = Astro.props;


let selected: Names = es;

switch(local){
  case "es":
    selected = es;
    break;
  case "en":
    selected = en;
    break;
}

---

<footer>
  <div class="content-container">
  <div class="copy-container">
<span style="padding-right: 10px;">
&copy;
  </span>
  <p>
    {year} - Luis Felipe Santofimio
  </p>
  </div> 
  <div class="">
    <a href="https://github.com/luisfelipesantofimio" target="_blank">
      <i class="fa-brands fa-github"></i>
    </a>
    <a href="https://www.linkedin.com/in/luis-felipe-santofimio-buitrago" target="_blank">
      <i class="fa-brands fa-linkedin"></i>
    </a>
  </div>
  </div>
<div style="padding: 1rem";></div>
  <div class="tech-info">
    <i class="fa-solid fa-code"></i> 
    <p>{selected.with} </p> 
    <i id="heart" class="fa-solid fa-heart"></i> 
    <p>{selected.using} </p>    
    <a href="https://astro.build/" target="_blank" style="padding-top: 6px;">
    <img src="/img/astro-logo.svg" alt="Astro logo" style="height: 20px;">
    </a>
  </div>
  <Spacer></Spacer>
</footer>

<style>
footer{
  padding: 3rem;
  width: 93.6%;
  display: flex;
  flex-direction: column;
  background-color: #DFEBF7;
  justify-content: center;
  align-items: center;
  padding-bottom: 10rem;
}
.copy-container{
  display: flex;
  align-items: center;
}
.content-container{
  width: 100%;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: space-evenly;

}
i{
  padding: 10px;
}

.tech-info{
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: center;
  font-size: 12px;
}

#heart{
  color: #EC598E;
  transition: 0.3s;
}

#heart:hover{
  transform: scale(1.5);

}

@media screen and (max-width: 768px) {
  footer{
    padding: 1rem;
    width: 91%;
    padding-bottom: 10rem;
  }
  .content-container{
    flex-direction: column;
    padding-bottom: 4rem;
  }
}
</style>
