---
interface Props {
  title: string;
  body: string;
  imgSource: string;
  imgAlt: string;
  imgWidth?:string;
}
const { title, body, imgSource, imgAlt, imgWidth = "50%"} = Astro.props;


---

  <section>
 <div class="row-container">
      <div class="text-container">
      <h1>{title}</h1>
      <p>{body}</p>
    </div>
      <div class="image-container">
      <img src={imgSource} alt={imgAlt} />
      </div>
    </div> 
     
  </section>

<style>
  .row-container {
    background-color: #45576D;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    padding: 2rem;
  }
  .text-container {
    width: 50% ;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 1rem;
    color: white;
  }
  .image-container {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  img {
    width: 70%;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.7);
    border-radius: 5px;
  }

  @media screen and (max-width: 768px) {
    .row-container {
      flex-direction: column;
      justify-content: center;
      align-items: center;
      min-height: 80vh;
    } 

    .text-container {
      width: 85%;
      padding: 0%;
      padding-bottom: 1rem;
    }

    img {
      width: 100%;
    }
  }
</style>



