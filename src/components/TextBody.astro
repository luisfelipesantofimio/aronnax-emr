---
interface Props {
  title: string;
  body: string;
  icon?: string;
}

const {title, body, icon = "fa regular fa-person"} = Astro.props;
---
<div class="divider"></div>
<section>
  <div class="title-section">
    <i class={icon}></i>
    <h1>
      {title}
    </h1>
  </div>
  <div class="body-section">
    {body}
  </div>
</section>

<style>
.divider{
  background-color: #AAC7D7;
  height: 5px;
}
section{
  background-color: #DFEBF7;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  padding: 4rem;
  align-content: center;
  align-items: center;
}

.title-section{
  padding: 1rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
  justify-content: center;
  align-content: center;
  background-color: #45576D;
  border-radius: 10px;
  color: #DFEBF7;
}

.body-section{
  width: 40%;
}

@media screen and (max-width: 768px) {
  section{
    flex-direction: column;
    padding: 2rem;
  }
  .body-section{
    padding-top: 1rem;
    width: 100%;
  }
}
</style>
